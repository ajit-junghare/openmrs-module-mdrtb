<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
    <bean id="MdrtbMappings" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="order"><value>14</value></property>
    	<property name="mappings">
            <props>
           		<prop key="module/@MODULE_ID@/mdrtbTSAdmin.list">MdrtbAdmiList</prop> 		
				<prop key="module/@MODULE_ID@/mdrtbTSAdmin.form">MdrtbAdmiForm</prop> 
            	<prop key="module/@MODULE_ID@/mdrtbIndex.form">MdrtbFormController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbManageContacts.form">MdrtbManageContactsController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbPatientOverview.form">MdrtbPatientOverviewController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbAddNewTestContainer.form">MdrtbAddNewTestContainer</prop>
            	<prop key="module/@MODULE_ID@/mdrtbAddPatientForm.form">MdrtbAddPatientFormController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbEditTestContainer.form">MdrtbEditTestContainerController</prop>
	    	</props>
		</property>
    </bean>
    <!-- Controllers --> 
	 <bean id="MdrtbManageContactsController" class="@MODULE_PACKAGE@.web.controller.MdrtbManageContactsController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbManageContacts</value></property>
		<property name="successView"><value>mdrtbPatientOverview.form</value></property>
    </bean>
    <bean id="MdrtbFormController" class="@MODULE_PACKAGE@.web.controller.MdrtbFormController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbIndex</value></property>
		<property name="successView"><value>mdrtbIndex.form</value></property>
    </bean>
    <bean id="MdrtbPatientOverviewController" class="@MODULE_PACKAGE@.web.controller.MdrtbPatientOverviewController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbPatientOverview</value></property>
		<property name="successView"><value>mdrtbPatientOverview.form</value></property>
    </bean>
    <bean id="MdrtbAddNewTestContainer" class="@MODULE_PACKAGE@.web.controller.MdrtbAddNewTestContainerController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbAddNewTestContainer</value></property>
		<property name="successView"><value>mdrtbPatientOverview.form</value></property>
    </bean>
	<bean id="MdrtbAddPatientFormController" class="@MODULE_PACKAGE@.web.controller.MdrtbAddPatientFormController" singleton="false">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>patient</value></property>
		<property name="commandClass"><value>org.openmrs.web.controller.patient.ShortPatientModel</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbAddPatientForm</value></property>
		<property name="successView"><value>mdrtbPatientOverview.form</value></property>
    </bean>
    <bean id="MdrtbEditTestContainerController" class="@MODULE_PACKAGE@.web.controller.MdrtbEditTestContainerController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbEditTestContainer</value></property>
		<property name="successView"><value>mdrtbPatientOverview.form</value></property>
    </bean>
     <bean id="MdrtbAdmiList" class="@MODULE_PACKAGE@.web.controller.MdrtbTSAdmListController">
		<property name="commandName"><value>listObj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbTSAdmin</value></property>
		<property name="successView"><value>mdrtbTSAdmin.list</value></property>
    </bean>
    <bean id="MdrtbAdmiForm" class="@MODULE_PACKAGE@.web.controller.MdrtbTSAdmFormController">
		<property name="commandName"><value>formObj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbTSAdmin</value></property>
		<property name="successView"><value>mdrtbTSAdmin.list</value></property>
    </bean> 
    <bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.mdrtb.OrderExtensionService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.mdrtb.impl.OrderExtensionServiceImpl">
							<property name="orderExtensionDAO">
								<bean class="org.openmrs.module.mdrtb.db.hibernate.HibernateOrderExtensionDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
    <!-- /Controllers -->
</beans>
