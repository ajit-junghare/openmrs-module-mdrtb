<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->
  
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">
           
    <bean id="MdrtbMappings" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="order"><value>71</value></property>
    	<property name="mappings">
            <props>
           		<prop key="module/@MODULE_ID@/mdrtbTSAdmin.list">MdrtbAdmiList</prop> 		
				<prop key="module/@MODULE_ID@/mdrtbTSAdmin.form">MdrtbAdmiForm</prop> 
            	<prop key="module/@MODULE_ID@/mdrtbIndex.form">MdrtbFormController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbAddPatientForm.form">MdrtbAddPatientFormController</prop>
            	<prop key="module/@MODULE_ID@/mdrtbPatientStatusAdmin.form">MdrtbPatientStatusAdmin</prop>
            	<prop key="module/@MODULE_ID@/contacts/contacts.form">MdrtbManageContactsController</prop>
            	
            	<!-- hacky way to handle existing tabs until we substitute them out -->
            	<prop key="module/@MODULE_ID@/regimen/regimen.form">RegimenController</prop>
            	<prop key="module/@MODULE_ID@/visits/visits.form">VisitsController</prop>
            	<prop key="module/@MODULE_ID@/status/status.form">StatusController</prop>
            	
            	<!-- new controller for patient header portlet -->
            	<prop key="**/mdrtbPatientHeader.portlet">mdrtbPatientHeaderPortletController</prop>
            	<prop key="**/patientChart.portlet">patientChartPortletController</prop>
	    	</props>
		</property>
    </bean>
    <!-- Controllers --> 
	 <bean id="MdrtbManageContactsController" class="@MODULE_PACKAGE@.web.controller.MdrtbManageContactsController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/contacts/contacts</value></property>
		<property name="successView"><value>contacts.form</value></property>
    </bean>     
    <bean id="MdrtbFormController" class="@MODULE_PACKAGE@.web.controller.MdrtbFormController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbIndex</value></property>
		<property name="successView"><value>mdrtbIndex.form</value></property>
    </bean>
	<bean id="MdrtbAddPatientFormController" class="@MODULE_PACKAGE@.web.controller.MdrtbAddPatientFormController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>patient</value></property>
		<property name="commandClass"><value>org.openmrs.web.controller.patient.ShortPatientModel</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbAddPatientForm</value></property>
		<property name="successView"><value>program/programList.form</value></property>
    </bean>
     <bean id="MdrtbAdmiList" class="@MODULE_PACKAGE@.web.controller.MdrtbTSAdmListController">
		<property name="commandName"><value>listObj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbTSAdmin</value></property>
		<property name="successView"><value>mdrtbTSAdmin.list</value></property>
    </bean>
    <bean id="MdrtbAdmiForm" class="@MODULE_PACKAGE@.web.controller.MdrtbTSAdmFormController">
		<property name="commandName"><value>formObj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbTSAdmin</value></property>
		<property name="successView"><value>mdrtbTSAdmin.list</value></property>
    </bean> 
    <bean id="MdrtbPatientStatusAdmin" class="@MODULE_PACKAGE@.web.controller.MdrtbPatientStatusAdminController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/mdrtbPatientStatusAdmin</value></property>
		<property name="successView"><value>mdrtbPatientStatusAdmin.form</value></property>
    </bean> 
    
    <!-- hacky way to handle existing tabs until we substitute them out -->
    <bean id="RegimenController" class="@MODULE_PACKAGE@.web.controller.MdrtbPatientOverviewController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/regimen/regimen</value></property>
		<property name="successView"><value>regimen.form</value></property>
    </bean>
   	<bean id="VisitsController" class="@MODULE_PACKAGE@.web.controller.MdrtbPatientOverviewController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/visits/visits</value></property>
		<property name="successView"><value>visits.form</value></property>
    </bean>
     <bean id="StatusController" class="@MODULE_PACKAGE@.web.controller.MdrtbPatientOverviewController">
		<property name="commandName"><value>obj</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/status/status</value></property>
		<property name="successView"><value>status.form</value></property>
    </bean>
    
    <!-- portlet controllers -->
    <bean id="mdrtbPatientHeaderPortletController" class="@MODULE_PACKAGE@.web.controller.portlet.MdrtbPatientHeaderPortletController">
    </bean>
    
    <bean id="patientChartPortletController" class="@MODULE_PACKAGE@.web.controller.portlet.PatientChartPortletController">
    </bean>
    
    <bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.mdrtb.MdrtbService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.mdrtb.impl.MdrtbServiceImpl">
							<property name="mdrtbDAO">
								<bean class="org.openmrs.module.mdrtb.db.hibernate.HibernateMdrtbDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
    <!-- /Controllers -->
    
    
    <!-- Define the Complex Obs Handler -->
    <bean parent="obsServiceTarget">
        <property name="handlers">
            <map>
                <entry>
                    <key><value>BinaryDataHandler</value></key>
                    <bean class="org.openmrs.module.mdrtb.obs.handler.BinaryDataHandler"/>
                </entry>
            </map>
        </property>
	</bean>

	<!--  Enable annotation-driven Spring MVC -->    
    <context:component-scan base-package="@MODULE_PACKAGE@" />
    
</beans>

